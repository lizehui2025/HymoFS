+                    if (hide_entry->path) hash_add(hymo_hide_paths, &hide_entry->node, hash);
+                    else kfree(hide_entry);
+                }
+            }
+            atomic_inc(&hymo_version);
+        }
+    } else if (strcmp(op, "inject") == 0) {
