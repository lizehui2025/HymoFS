+            hash = full_name_hash(NULL, arg1, strlen(arg1));
+            found = false;
+            hash_for_each_possible(hymo_hide_paths, hide_entry, node, hash) {
+                if (strcmp(hide_entry->path, arg1) == 0) {
+                    found = true;
+                    break;
+                }
+            }
